<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateCrowdInStrings">
    <color name="theme_dark_primary">#3d3d3d</color>
    <color name="theme_dark_primary_dark">@color/material_grey_900</color>
    <color name="theme_dark_primary_light">@color/material_grey_800</color>
    <color name="theme_dark_primary_text">@color/white</color>
    <color name="theme_dark_secondary_text">#b2ffffff</color>
    <color name="theme_dark_row_current">#393939</color>
    <color name="theme_dark_drawer_row_current">#33999999</color>
    <color name="theme_dark_drawer_item">#DEFFFFFF</color>

    <style name="Base.Theme.Dark" parent="@style/Theme.Material3.Dark.NoActionBar">
        <!-- Android colors -->
        <item name="colorPrimary">@color/md_expressive_dark_primary</item>
        <item name="colorOnPrimary">@color/md_expressive_dark_onPrimary</item>
        <item name="colorPrimaryDark">@color/md_expressive_dark_primaryContainer</item>
        <item name="colorSurface">@color/md_expressive_dark_surface</item>
        <item name="colorAccent">@color/md_expressive_dark_secondary</item>
        <item name="colorOnSurface">@color/md_expressive_dark_onSurface</item>
        <item name="colorPrimaryContainer">@color/md_expressive_dark_primaryContainer</item> <!-- Switch thumb color when disabled and being pressed -->
        <item name="colorOnPrimaryContainer">@color/md_expressive_dark_onPrimaryContainer</item> <!-- FAB icons -->

        <item name="android:textColor">@color/md_expressive_dark_onSurface</item>
        <item name="android:textColorSecondary">@color/md_expressive_dark_onSurfaceVariant</item>
        <item name="android:colorBackground">@color/md_expressive_dark_surface</item>
        <item name="android:windowBackground">@color/md_expressive_dark_surface</item>

        <item name="colorSurfaceContainerHighest">@color/md_expressive_dark_surfaceContainerHighest</item>
        <item name="colorSurfaceContainerHigh">@color/md_expressive_dark_surfaceContainerHigh</item>
        <item name="colorSurfaceContainer">@color/md_expressive_dark_surfaceContainer</item>
        <item name="colorSurfaceContainerLow">@color/md_expressive_dark_surfaceContainerLow</item>
        <!-- Widget colors -->
        <item name="widgetColorActivated">?attr/colorAccent</item>
        <item name="preferenceCategoryTitleTextColor">@color/md_expressive_dark_secondary</item>
        <!-- Navigation drawer -->
        <item name="navDrawerItemColor">@color/md_expressive_dark_onSurfaceVariant</item>
        <item name="navDrawerItemBackgroundColor">@drawable/drawer_item_background_dark</item>
        <!-- Menu -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <!-- Action bar styles -->
        <item name="appBarColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTextColor">@color/md_expressive_dark_onSurface</item>
        <item name="actionBarPopupTextColor">@color/md_expressive_dark_onSurfaceVariant</item>
        <item name="actionModeBackground">@color/md_expressive_dark_secondaryContainer</item>
        <!-- Tab layout -->
        <item name="tabLayoutBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="tabActiveIconColor">@color/md_expressive_dark_onSecondaryContainer</item>
        <!-- Deck list colors and divider -->
        <item name="currentDeckBackground">@drawable/item_background_selected</item>
        <item name="currentDeckBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="focusedRowBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="dynDeckColor">@color/md_expressive_dark_tertiary</item>
        <item name="deckDivider">@drawable/divider_dark</item>
        <item name="expandRef">@drawable/ic_chevron_right_white</item>
        <item name="collapseRef">@drawable/ic_expand_more_white</item>
        <!-- Count colors -->
        <item name="newCountColor">@color/md_expressive_dark_secondary</item>
        <item name="learnCountColor">@color/md_expressive_dark_tertiary</item>
        <item name="reviewCountColor">@color/md_expressive_dark_primary</item>
        <item name="buryCountColor">@color/md_expressive_dark_outline</item>
        <item name="zeroCountColor">@color/md_expressive_dark_onSurfaceVariant</item>
        <!-- Study Screen colors -->
        <item name="showAnswerButtonBackground">@color/md_expressive_dark_primary</item>
        <item name="againButtonBackground">@color/expressive_again_dark</item>
        <item name="hardButtonBackground">@color/expressive_hard_dark</item>
        <item name="goodButtonBackground">@color/expressive_good_dark</item>
        <item name="easyButtonBackground">@color/expressive_easy_dark</item>
        <item name="topBarColor">@color/md_expressive_dark_surfaceContainerHigh</item>
        <item name="maxTimerColor">@color/md_expressive_dark_error</item>
        <item name="answerButtonTextColor">@color/expressive_on_dark_surface</item>
        <item name="againButtonTextColor">@color/expressive_on_dark_surface</item>
        <item name="hardButtonTextColor">@color/expressive_on_dark_surface</item>
        <item name="goodButtonTextColor">@color/expressive_on_dark_surface</item>
        <item name="easyButtonTextColor">@color/expressive_on_dark_surface</item>

        <item name="alternativeBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="againTextColor">@color/md_expressive_dark_tertiary</item>
        <item name="hardTextColor">@color/md_expressive_dark_secondary</item>
        <item name="goodTextColor">@color/md_expressive_dark_primary</item>
        <item name="easyTextColor">@color/md_expressive_dark_secondaryContainer</item>
        <item name="againBackgroundColor">@color/md_expressive_dark_tertiaryContainer</item>
        <item name="hardBackgroundColor">@color/md_expressive_dark_secondaryContainer</item>
        <item name="goodBackgroundColor">@color/md_expressive_dark_primaryContainer</item>
        <item name="easyBackgroundColor">@color/md_expressive_dark_secondaryContainer</item>
        <!-- Study Screen button drawables -->
        <item name="showAnswerColor">@color/md_expressive_dark_secondary</item>
        <item name="againButtonRef">@drawable/footer_button_again_dark</item>
        <item name="hardButtonRef">@drawable/footer_button_hard_dark</item>
        <item name="goodButtonRef">@drawable/footer_button_good_dark</item>
        <item name="easyButtonRef">@drawable/footer_button_easy_dark</item>
        <item name="againButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="hardButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="goodButtonRippleRef">@drawable/footer_button_ripple</item>
        <item name="easyButtonRippleRef">@drawable/footer_button_ripple</item>
        <!-- Card Browser Colors -->
        <item name="cardBrowserDivider">@color/md_expressive_dark_outline</item>
        <!-- Browser colors -->
        <item name="suspendedColor">@color/md_expressive_dark_secondaryContainer</item>
        <item name="buriedColor">@color/md_expressive_dark_tertiaryContainer</item>
        <item name="markedColor">@color/md_expressive_dark_primaryContainer</item>
        <!-- Note editor colors -->
        <item name="duplicateColor">@color/md_expressive_dark_errorContainer</item>
        <item name="editTextBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="editTextHighlightColor">@color/md_expressive_dark_primary</item>
        <item name="toolbarBackgroundColor">@color/md_expressive_dark_surfaceContainerHigh</item>
        <item name="toolbarIconColor">@color/md_expressive_dark_onSurface</item>
        <item name="buttonShadowColor">@color/md_expressive_dark_outlineVariant</item>
        <item name="buttonRippleColor">@color/md_expressive_dark_outline</item>
        <item name="buttonForegroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <!-- FAB -->
        <item name="fab_normal">@color/md_expressive_dark_primary</item>
        <item name="fab_pressed">@color/md_expressive_dark_secondary</item>
        <item name="fab_labelsTextColor">@color/expressive_on_dark_surface</item>
        <item name="fab_item_background">@drawable/fab_label_background</item>
        <!-- Images -->
        <item name="navDrawerImage">@drawable/nav_drawer_logo_dark_theme</item>
        <!-- Dialog styles -->
        <item name="android:listPreferredItemHeight">56dip</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/dialog_corner_radius</item>
        <item name="textAllCaps">false</item>
        <!--Custom Tabs colors-->
        <item name="customTabNavBarColor">@color/md_expressive_dark_surface</item>
        <item name="popupBackgroundColor">@color/md_expressive_dark_surfaceContainer</item>
        <item name="editTextDisabled">@color/md_expressive_dark_outline</item>
        <item name="overflowAndPopupMenuIconColor">@color/md_expressive_dark_onSurfaceVariant</item>
        <!-- StatusBar -->
        <item name="android:statusBarColor">@color/md_expressive_dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navbar -->
        <item name="android:navigationBarColor">@color/md_expressive_dark_surfaceContainerLow</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Snackbar. Attributes snackbarStyle, snackbarTextViewStyle and snackbarButtonStyle
             must be *all* present in a theme (or its parent) in order for the snackbar
             to pick up the proper layout that uses these attributes. -->
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/Widget.MaterialComponents.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
        <item name="snackbarBackgroundTintColor">@color/md_expressive_dark_surfaceContainerHigh</item>
        <item name="snackbarButtonTextColor">@color/md_expressive_dark_primary</item>

        <!-- Introduction -->
        <item name="introductionLogoTransparent">#88463A3A</item>

        <!-- Widget styles -->
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material3</item>
        <item name="sliderStyle">@style/SliderStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.AnkiDroid</item>

        <!-- ProgressDialog-->
        <item name="dialogBackground">@color/md_expressive_dark_surface</item>
        <item name="progressDialogButtonTextColor">@color/md_expressive_dark_primary</item>

        <item name="checkMediaListBackground">@color/md_expressive_dark_surfaceContainer</item>
        <item name="checkMediaListForeground">@color/md_expressive_dark_onSurface</item>

        <!-- AlertDialogTheme-->
        <item name="alertDialogTheme">@style/ThemeOverlay.AnkiDroid.AlertDialog</item>
        <item name="tabStyle">@style/TabLayoutStyle</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme_Dark" parent="Base.Theme.Dark"/>
</resources>
