<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateCrowdInStrings">
    <color name="theme_black_primary">#000000</color>
    <color name="theme_black_primary_dark">#000000</color>
    <color name="theme_black_primary_light">#151515</color>
    <color name="theme_black_primary_text">#fff</color>    <!-- Alternative: #808080 -->
    <color name="theme_black_row_current">#1a1a1a</color>

    <style name="Base.Theme.Dark.Black" parent="Theme_Dark">
        <!-- Android colors -->
        <item name="colorPrimary">@color/md_expressive_black_primary</item>
        <item name="colorPrimaryDark">@color/md_expressive_black_primaryContainer</item>
        <item name="colorAccent">@color/md_expressive_black_secondary</item>
        <item name="android:textColor">@color/md_expressive_black_onSurface</item>
        <item name="android:textColorSecondary">@color/md_expressive_black_onSurfaceVariant</item>
        <item name="android:colorBackground">@color/md_expressive_black_surface</item>
        <item name="android:windowBackground">@color/md_expressive_black_surface</item>
        <item name="preferenceCategoryTitleTextColor">@color/md_expressive_black_secondary</item>
        <!-- Action bar styles -->
        <item name="appBarColor">@color/md_expressive_black_surfaceContainer</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTextColor">@color/md_expressive_black_onSurface</item>
        <item name="actionBarPopupTextColor">@color/md_expressive_black_onSurfaceVariant</item>
        <item name="actionModeBackground">@color/md_expressive_black_secondaryContainer</item>
        <!-- Tab layout -->
        <item name="tabLayoutBackgroundColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="tabActiveIconColor">@color/md_expressive_black_onSecondaryContainer</item>
        <!-- Deck list colors and divider -->
        <item name="currentDeckBackground">@drawable/item_background_selected</item>
        <item name="currentDeckBackgroundColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="focusedRowBackgroundColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="dynDeckColor">@color/md_expressive_black_tertiary</item>
        <item name="deckDivider">@drawable/divider_black</item>
        <item name="expandRef">@drawable/ic_chevron_right_white</item>
        <item name="collapseRef">@drawable/ic_expand_more_white</item>
        <!-- Count colors -->
        <item name="newCountColor">@color/md_expressive_black_secondary</item>
        <item name="learnCountColor">@color/md_expressive_black_tertiary</item>
        <item name="reviewCountColor">@color/md_expressive_black_primary</item>
        <item name="buryCountColor">@color/md_expressive_black_outline</item>
        <item name="zeroCountColor">@color/md_expressive_black_onSurfaceVariant</item>
        <!-- Study Screen colors -->
        <item name="showAnswerButtonBackground">@color/md_expressive_black_primary</item>
        <item name="showAnswerColor">@color/md_expressive_black_secondary</item>
        <item name="topBarColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="maxTimerColor">@color/md_expressive_black_tertiary</item>
        <item name="answerButtonTextColor">@color/md_expressive_black_onSurface</item>
        <item name="againButtonTextColor">@color/md_expressive_black_onSurface</item>
        <item name="hardButtonTextColor">@color/md_expressive_black_onSurface</item>
        <item name="goodButtonTextColor">@color/md_expressive_black_onSurface</item>
        <item name="easyButtonTextColor">@color/md_expressive_black_onSurface</item>

        <item name="againButtonBackground">@color/expressive_again_black</item>
        <item name="hardButtonBackground">@color/expressive_hard_black</item>
        <item name="goodButtonBackground">@color/expressive_good_black</item>
        <item name="easyButtonBackground">@color/expressive_easy_black</item>

        <item name="alternativeBackgroundColor">@color/md_expressive_black_surfaceContainer</item>
        <item name="againTextColor">@color/md_expressive_black_tertiary</item>
        <item name="hardTextColor">@color/md_expressive_black_secondary</item>
        <item name="goodTextColor">@color/md_expressive_black_primary</item>
        <item name="easyTextColor">@color/md_expressive_black_secondaryContainer</item>
        <item name="againBackgroundColor">@color/md_expressive_black_tertiaryContainer</item>
        <item name="hardBackgroundColor">@color/md_expressive_black_secondaryContainer</item>
        <item name="goodBackgroundColor">@color/md_expressive_black_primaryContainer</item>
        <item name="easyBackgroundColor">@color/md_expressive_black_secondaryContainer</item>
        <!-- Study Screen button drawables -->
        <item name="againButtonRef">@drawable/footer_button_all_black</item>
        <item name="hardButtonRef">@drawable/footer_button_all_black</item>
        <item name="goodButtonRef">@drawable/footer_button_all_black</item>
        <item name="easyButtonRef">@drawable/footer_button_all_black</item>
        <item name="againButtonRippleRef">@drawable/footer_button_all_black_ripple</item>
        <item name="hardButtonRippleRef">@drawable/footer_button_all_black_ripple</item>
        <item name="goodButtonRippleRef">@drawable/footer_button_all_black_ripple</item>
        <item name="easyButtonRippleRef">@drawable/footer_button_all_black_ripple</item>
        <!-- Card Browser Colors -->
        <item name="cardBrowserDivider">@color/md_expressive_black_outline</item>
        <!-- Browser colors -->
        <item name="suspendedColor">@color/md_expressive_black_secondaryContainer</item>
        <item name="selectedColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="markedColor">@color/md_expressive_black_primaryContainer</item>
        <!-- Note editor colors -->
        <item name="duplicateColor">@color/md_expressive_black_errorContainer</item>
        <item name="editTextBackgroundColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="editTextHighlightColor">@color/md_expressive_black_primary</item>
        <item name="toolbarBackgroundColor">@color/md_expressive_black_surfaceContainer</item>
        <item name="toolbarIconColor">@color/md_expressive_black_onSurface</item>
        <item name="buttonShadowColor">@color/md_expressive_black_outline</item>
        <item name="buttonRippleColor">@color/md_expressive_black_outline</item>
        <item name="buttonForegroundColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <!-- FAB -->
        <item name="fab_normal">@color/md_expressive_black_primary</item>
        <item name="fab_pressed">@color/md_expressive_black_secondary</item>
        <item name="fab_labelsTextColor">@color/md_expressive_black_onSurface</item>
        <item name="fab_item_background">@drawable/fab_label_background_black</item>
        <!-- Images -->
        <item name="navDrawerImage">@drawable/nav_drawer_logo_black_theme</item>
        <!-- Dialog styles -->
        <item name="android:listPreferredItemHeight">56dip</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.AnkiDroid.AlertDialog.Black</item>
        <!--Custom Tabs colors-->
        <item name="customTabNavBarColor">@color/md_expressive_black_surface</item>
        <item name="popupBackgroundColor">@color/md_expressive_black_surfaceContainer</item>
        <item name="android:statusBarColor">@color/md_expressive_black_surface</item>

        <item name="editTextDisabled">@color/md_expressive_black_outline</item>
        <item name="android:navigationBarColor">@color/md_expressive_black_surfaceContainer</item>

        <!-- Snackbar -->
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyleBlack</item>
        <item name="snackbarBackgroundTintColor">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="snackbarButtonTextColor">@color/md_expressive_black_primary</item>

        <!-- Introduction -->
        <item name="introductionLogoTransparent">#661A1A1A</item>

        <!-- Card-->
        <item name="cardViewStyle">@style/BlackCardBackground</item>

        <!-- ProgressDialog-->
        <item name="dialogBackground">@color/md_expressive_black_surfaceContainerHigh</item>
        <item name="progressDialogButtonTextColor">@color/md_expressive_black_primary</item>
    </style>

    <style name="SnackbarTextStyleBlack" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackCardBackground" parent="CardView">
        <item name="cardBackgroundColor">@color/theme_black_primary_light</item>
    </style>

    <style name="ThemeOverlay.AnkiDroid.AlertDialog.Black" parent="ThemeOverlay.AnkiDroid.AlertDialog">
        <item name="android:background">@color/theme_black_primary_light</item>
    </style>

    <style name="Theme_Dark.Black" parent="Base.Theme.Dark.Black"/>
</resources>
